<!doctype html>

<html lang="en">
<head>
	<meta charset="utf-8">

	<title>{{ board_name }} Admin Panel</title>
	<meta name="description" content="Manage {{ board_name }} imageboard">
	<meta name="author" content="Seschan team">
</head>

<body>
	<div class="row">
		<form action="/logout" class="logout">
			<input type="submit" value='Logout' class="logout_btn"/>
		</form>
		<h1 class="status_header">Logged in as {{ username }} with {{ status }} rights</h1>
	</div>
	<hr/>
	{% if status=="admin" or status=="owner" %}
	<div class="options_row">
		<form method="post" action="/new_board">
			<h2>Create new board</h2>
			<input type="text" name="board_name" placeholder="Short name" />
			<input type="text" name="full_name" placeholder="Full name" />
			<input type="submit" value="Create" />
		</form>
		<form method="post" action="/delete_board">
			<h2>Delete board</h2>
			<input type="text" name="board_name" placeholder="Short name" />
			<div class="radio_row">
				<h3>Sanity check:</h3>
				<input type="checkbox" name="approval" id="approval" class="check"/>
			</div>
			<input type="submit" value="Delete" />
		</form>
	</div>
	<hr />
	{% endif %}
	{% if status == "owner" %}
	<div class="options_row">
		<form method="post" action="/create-admin">
			<h2>Create new admin</h2>
			<input type="text" name="login" placeholder="Login" />
			<input type="password" name="password" placeholder="Password" />
			<div class="radio_row">
				<input type="radio" id="owner" name="permission" value="owner">
				<label for="owner">Owner</label>
			</div>
			<div class="radio_row">
				<input type="radio" id="admin" name="permission" value="admin">
				<label for="admin">Admin</label>
			</div>
			<div class="radio_row">
				<input type="radio" id="mod" name="permission" value="mod">
				<label for="mod">Mod</label>
			</div>
			<input type="submit" value="Create" />
		</form>
		<form method="post" action="/delete-admin">
			<h2>Delete admin</h2>
			<input type="text" name="login" placeholder="Login" />
			<div class="radio_row">
				<h3>Sanity check:</h3>
				<input type="checkbox" name="approval" id="approval" class="check"/>
			</div>
			<input type="submit" value="Delete" />
		</form>
	</div>
	<hr />
	{% endif %}
	<style>
		html {
			width: 100%;
			height: 100%;
			overflow-x: hidden;
		}
		body {
			background-color: #FFFFEE;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			width: 100%;
			height: 100%;
			overflow-x: hidden;
		}
		h1 {
			color: #800000;
			font-size: 2rem;
		}
		h2 {
			color: #800000;
			font-size: 2rem;
			text-align: center;
		}
		h3 {
			color: #800000;
			font-size: 1rem;
			text-align: center;
		}
		.logout {
			width: 100px;
			height: 50px;
		}
		form {
			width: 100%;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
		}
		.logout_btn {
			text-align: center;
			width: 100%;
			height: 100%;
			font-size: 1rem;
		}
		input {
			text-align: center;
			width: 60%;
			height: 70px;
			font-size: 1.5rem;
			margin-bottom: 1%;
		}
		.check {
			margin-bottom: 0.5%;
			height: 10px;
			width: 10px;
			margin-left: 1%;
		}
		.row {
			display: flex;
			flex-direction: row;
			justify-content: center;
			align-items: center;
			width: 100%;
		}
		.options_row {
			display: flex;
			flex-direction: row;
			justify-content: center;
			align-items: center;
			width: 100%;

		}

		.radio_row {
			display: flex;
			flex-direction: row;
			justify-content: center;
			align-items: center;
			width: 10%;
			height: 60px;
		}
		.status_header {
			margin-left: 2%;
		}
		hr {
			width: 100%;
		}
		@media (max-width: 800px) {
			h1 {
				font-size: 1rem;
			}
			h2 {
				font-size: 1rem;
			}
			.options_row {
				flex-direction: column;
			}
			.radio_row {
				display: flex;
				flex-direction: row;
				justify-content: center;
				align-items: center;
				width: 60%;
			}
		},
	</style>
</body>
</html>